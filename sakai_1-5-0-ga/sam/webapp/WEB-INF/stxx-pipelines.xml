    </transform>
  </pipeline>
  <pipeline match="asi/result/viewAssessmentResult.dox">
    <transform type="html">
      <param name="path" value="/xml/xsl/result/viewAssessmentResult.xsl"/>
      <param name="render" value="server"/>
      <param name="mode" value="view"/>
    </transform>
  </pipeline>
  <pipeline match="asi/result/gradeResult.dox">
    <transform type="html">
      <param name="path" value="/xml/xsl/result/viewAssessmentResult.xsl"/>
      <param name="render" value="server"/>
      <param name="mode" value="grade"/>
    </transform>
  </pipeline>
