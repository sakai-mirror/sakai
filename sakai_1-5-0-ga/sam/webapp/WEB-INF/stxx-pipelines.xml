<pipeline-definitions>
  <pipeline match="simple/*.dox">
    <transform type="html">
      <param name="path" value="/xml/xsl/item.xsl"/>
      <param name="render" value="server"/>
    </transform>
  </pipeline>
  <pipeline match="asi/select/DisplayAssessments.dox">
    <transform type="html">
      <param name="path" value="/xml/xsl/select/displayAssessments.xsl"/>
      <param name="render" value="server"/>
    </transform>
  </pipeline>
  <pipeline match="asi/delivery/*.dox">
    <transform type="html">
      <param name="path" value="/xml/xsl/delivery/{1}.xsl"/>
      <param name="render" value="server"/>
      <param name="messages" value="delivery.*"/>
    </transform>
  </pipeline>
  <pipeline match="asi/review/*.dox">
    <transform type="html">
      <param name="path" value="/xml/xsl/review/{1}.xsl"/>
