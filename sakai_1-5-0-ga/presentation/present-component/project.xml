<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<name>Presentation Component</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-present-component</id>
	<currentVersion>sakai.1.5.0</currentVersion>
	<organization>
		<name>Mark J. Norton</name>
		<url>http://www.nolaria.org/</url>
	</organization>
	<inceptionYear>2004</inceptionYear>

	<dependencies>

		<!-- to be able to access the Sakai component manager -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-component</artifactId>
			<version>sakai.1.5.0</version>
		</dependency>

		<!-- to be able to access the IdManager interface -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-service</artifactId>
			<version>sakai.1.5.0</version>
		</dependency>

		<!-- to be able to access the PresentationService interface.  -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-present-service</artifactId>
			<type>jar</type>
			<version>sakai.1.5.0</version>
		</dependency>

		<!-- Need the OSID APIs -->
                <dependency>
                        <groupId>OKI</groupId>
                        <artifactId>OkiOSID</artifactId>
                        <version>2.0</version>
                        <url>http://sourceforge.net/projects/okiproject</url>
                </dependency>

                <!-- to be able to access the Sakai utilitiy classes -->
                <dependency>
                        <groupId>sakaiproject</groupId>
                        <artifactId>sakai-util</artifactId>
                        <version>sakai.1.5.0</version>
                </dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

		<!-- other resources for the jar - the message bundles -->
		<resources>
			<resource>
				<directory>${basedir}/src/bundle</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	
	</build>

</project>
