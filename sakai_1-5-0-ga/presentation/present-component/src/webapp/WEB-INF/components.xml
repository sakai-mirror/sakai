<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

<!--  Register Our IdManager  -->
        <bean id="org.osid.id.IdManager"
                class="org.sakaiproject.component.osid.id.IdManager"
                singleton="true">
                <!-- No injections yet -->
        </bean>
	
<!--  Register the PresentationManager.  -->
        <bean id="org.sakaiproject.service.presentation.PresentationManager"
                	class="org.sakaiproject.component.presentation.PrLegacyManager"
                        singleton="true">
                <property name="idManager"><ref bean="org.osid.id.IdManager"/></property>
        </bean>

</beans>
