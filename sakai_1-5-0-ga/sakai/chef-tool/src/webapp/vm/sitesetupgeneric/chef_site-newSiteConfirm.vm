##<!-- $Header: /cvs/sakai/chef-tool/src/webapp/vm/sitesetupgeneric/chef_site-newSiteConfirm.vm,v 1.13 2005/02/14 20:35:37 zqian.umich.edu Exp $ -->## Creating site step 4: confirmation page<div class="portletBody">	#if ($alertMessage)<div class="chefAlertBox">Alert: $validator.escapeHtml($alertMessage)</div>#end	<h3 class="insColor insBak insBor">		Confirm Your Site Setup	</h3>	<p class="step">		#if ($!isProjectSite)			Step $!step of $!totalSteps: Confirm your site setup selections...		#elseif ($!isCourseSite)			Step $!step of $!totalSteps: Confirm your site setup selections...		#else			Confirm your site setup selections...		#end	</p>	<p>		Please review the following information about your site. 		#if ($!isCourseSite && $!manualAddNumber)			If this information is correct, click Request Site. 		#else			If this information is correct, click Create Site. 		#end		If you need to make changes, click the Back button at the bottom of the page. To make changes to this setup later, go to Site Info within your site.	</p>	#if ($isCourseSite)		You are setting up a class site that includes the following class/sections:		<ul>			#foreach ($item in $!selectedProviderCourse)				<li>$item </li>			#end		</ul>		#if ($!manualAddNumber)			<ul>				#foreach ($k in [0..$manualAddNumber])					<li>$!manualAddSubjects.get($k) $!manualAddCourses.get($k) $!manualAddSections.get($k)</li>				#end			</ul>		#end		<br />	#end	<form action="#toolForm("$action")" method="post">		<table class ="itemSummary" cellspacing="0" summary="info on the new site">			<tr>				<th>					Site Title:				</th>				<td>					$validator.escapeHtml($title)				</td>			</tr>			<tr>				<th>					Description:				</th>				<td>					$validator.escapeHtml($description)				</td>			</tr>			<tr>				<th>					Short Description:				</th>				<td>					$validator.escapeHtml($short_description)				</td>			</tr>			<tr>				<th>					Tools:				</th>				<td>					#if ($check_home)						Home<br />					#end					#foreach($tool in $toolRegistrationList)						#set($toolId = $tool.Id)						#if ($toolRegistrationSelectedList.contains($tool.Id))							#if ($toolId.equals("chef.mailbox"))								$tool.Title: $emailId@$serverName <br />							#elseif ($toolId.indexOf("chef.news") != -1)								$tool.Title: $!newsTitles.get($toolId) <br />							#elseif ($toolId.indexOf("chef.iframe") != -1)								$tool.Title: $!wcTitles.get($toolId) <br />							#else								$tool.Title								#foreach ($tId in $!importSiteTools.keys())								#if ($tId == $toolId)									(										#set($importSiteIds = $importSiteTools.get($toolId))										#foreach($importSiteId in $importSiteIds)											#set($importSite = $siteService.getSite($importSiteId))											$importSite.getTitle(),										#end									)								#end							#end							<br />							#end						#end					#end				</td>			</tr>			<tr> 				<th>					Available To:				</th>				<td>					#if ($!published)						#if ($!joinable)							Site can be joined by anyone with authorization to login						#else							Site participants only						#end					#else						## unpublished site						Site owner and organizers					#end				</td>			</tr>			<tr>				<th>					Visible To Public:				</th>				<td>					#if ($!published && $!include)						Yes					#else						No					#end				</td>			</tr>			#if ($!isCourseSite && $!skins.size() > 0)				<tr>					<th>						Appearance (Skin):					</th>					<td>						#foreach($skin in $!skins)							#if($selectedSkin == $skin.css)								$skin.unit							#end						#end					</td>				</tr>			#else				<tr>					<th>						Icon URL:					</th>					<td>						$!validator.escapeHtml($!iconUrl)					</td>				</tr>			#end			<tr>				<th>					Site Contact Name:				</th>				<td>					$validator.escapeHtml($!siteContactName)				</td>			</tr>			<tr>				<th>					Site Contact Email:				</th>				<td>					$validator.escapeHtml($!siteContactEmail)				</td>			</tr>		</table>		<input type="hidden" name="back" value="18" />		<input type="hidden" name="template-index" value="10"/>		<input type="hidden" name="continue" value="0" />		<div class="act">			#if ($!isCourseSite && $!manualAddNumber)				<input type="submit" class="active" name="eventSubmit_doFinish" value="Request Site" />			#else				<input type="submit" class="active" name="eventSubmit_doFinish" value="Create Site" />			#end			<input type="submit" name="eventSubmit_doBack" value="Back" />			<input type="submit" name="eventSubmit_doCancel_create" value="Cancel" />		</div>	</form></div>