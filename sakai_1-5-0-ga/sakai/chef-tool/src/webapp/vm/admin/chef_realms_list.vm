<script type="text/javascript" language="JavaScript">
	focus_path = ["search"];
</script>
<div class="chefPortletContainer">
#if($menu)
	#toolbar($menu)
#end
	<div class ="chefPortletContent">
		#if ($alertMessage)<div class="chefAlertBox">Alert: $validator.escapeHtml($alertMessage)</div>#end
		<div class="chefPageviewTitle">
			These are the Realms defined within the system that meet the search criteria.  Click on an Id to edit.
		</div>
#if ($realms.size() > 0)
	#set ($realmCount = 0)
		<table class="chefFlatListViewTable" cellspacing="0" summary ="List of Groups">
			<tr>
				<th id="Id">Realm Id</th>
##				<th id="Description">Used For</th>
				<th id="Provider">Provider Id</th>
				<th id="Maintain">Maintain Role</th>
			</tr>
	#foreach ($realm in $realms)
		#set ($realmCount=$realmCount + 1)
			<tr>
				<td headers="Id" #if ($realmCount > 1) class="chefTopline" #end>
					#if ($service.allowUpdateRealm($realm.Id))
						<a href="#toolLink("$action" "doEdit")&id=$validator.escapeUrl($realm.Id)">
							$validator.escapeHtml($realm.Id)
						</a>
					#else
						$validator.escapeHtml($realm.Id)
					#end
				</td>
##				<td headers="Description" #if ($realmCount > 1) class="chefTopline" #end>$!validator.escapeHtml($!realm.Description)</td>
				<td headers="Provider" #if ($realmCount > 1) class="chefTopline" #end>$!validator.escapeHtml($!realm.ProviderRealmId)</td>
				<td headers="Maintain" #if ($realmCount > 1) class="chefTopline" #end>$!validator.escapeHtml($!realm.MaintainRole)</td>
			</tr>
	#end
		</table>
#else
		<div class="chefListMessage">
			No realms are defined that meet the search criteria.
		</div>
#end
	</div>
</div>
