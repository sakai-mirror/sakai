## chef_chat-Toolbar.vm, use with org.chefproject.ChatAction.java
##     context: $menu: the toolbar to be shown, defined in buildToolbarPanelContext
##
## this is double deep
<script type="text/javascript" language="JavaScript">
doubleDeep = true;
focus_path = ["search"];
</script>
<div class="chefPortletContainer">
	#if($menu)#toolbar($menu)#end
	<div class="chef2ndToolbarWrap">
		<table class="chef2ndToolbar" cellspacing="0" summary="this is for second toolbar, containing dropdown view list, search area and paging" >
			<tr class="first">
				<td class="left">
					<form name="viewForm" class="toolbarForm" method="post" action="#toolForm("ThreadedDiscussionIIAction")">
						<input type="hidden" name="eventSubmit_doView" value="view" />
						View:
						<select name="view" size="1" tabindex="3" onchange="blur();document.viewForm.submit();">
							#foreach ($view in ["2 Row Layout", "2 Column Layout"])
								#if ($selectedView.equals($view))
									<option value="$view" selected="selected" >$view</option>
								#else
									<option value="$view" >$view</option>
								#end
							#end
						</select>
					</form>
				</td>
				<td class="right">
					<form name="searchForm" class="toolbarForm" action="#toolForm("ThreadedDiscussionIIAction")" method="post">
                        <input type="hidden" name="eventSubmit_doSearch" value="null" />
						<input size="20" value="$searchString" name="$form_search" id="$form_search" type="text" class="searchField" style="background-color:#fff;width:10em;color:#000" />
                        <a href="#" title="Search" onclick="location = '#toolLink("ThreadedDiscussionIIAction" "doSearch")'+buildQueryString('searchForm');return false;">
                        	Search
                        </a>
						#if (($!searchString) && (!$searchString.equals("")))
	                    <a href="#" title="Clear search" onclick="location = '#toolLink("ThreadedDiscussionIIAction" "doSearch_clear")'+buildQueryString('searchForm');return false;">
	                    	Clear Search
	                    </a>
						#end
					</form>
				</td>
			</tr>
		</table>
	</div>
</div>	

