<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping package="org.sakaiproject.component.sample.crud">

	<class name="org.sakaiproject.component.sample.crud.CrudObjectImpl" 
			table="CrudObject_T"
			optimistic-lock="version">
    
	<id name="id" unsaved-value="null">
		<column name="ID" length="36" not-null="true"/>
		<generator class="uuid.hex"/>
	</id>

	<version name="version" type="timestamp" unsaved-value="null"/>

    <property name="name">
		<column name="NAME" length="64" not-null="false" index="true"/>
    </property>

	<property name="rank" not-null="false" length="64"/>

	<property name="serialNumber" not-null="false" length="64"/>

  </class>
    
</hibernate-mapping>
