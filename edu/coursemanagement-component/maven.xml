<?xml version="1.0" encoding="UTF-8"?>

<project default="sakai"
        xmlns:j="jelly:core">

        <goal name="sakai">
                <attainGoal name="clean:clean" />
                <attainGoal name="include_hibernate_map" />
                <attainGoal name="jar:install" />
        </goal>

        <goal name="include_hibernate_map">
                <!-- this include any *.hbm.xml, *.properties, *.xml which lives among the code -->
                <copy todir="target/classes" includeemptydirs="false"
                        verbose="false">
                        <fileset dir="src/java">
                                <exclude name="**/*.java" />
                        </fileset>
                </copy>
        </goal>
</project>
