<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   <bean id="resourceOverview" class="org.sakaiproject.component.app.help.model.ResourceBean">
      <property name="docId"><value>aplu</value></property>
      <property name="name"><value>Resources Overview</value></property>
      <property name="location"><value>/sakai_resources/aplu.html</value></property>
      <property name="defaultForTool"><value>sakai.resources</value></property>      
   </bean>

   <bean id="createResource" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>aplv</value></property>
      <property name="name"><value>Create Resource</value></property>
      <property name="location"><value>/sakai_resources/aplv.html</value></property>
   </bean>
      <bean id="moveResource" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>aplx</value></property>
      <property name="name"><value>Move Resource</value></property>
      <property name="location"><value>/sakai_resources/aplx.html</value></property>
   </bean>
      <bean id="reviseResource" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>aplw</value></property>
      <property name="name"><value>Revise Resource</value></property>
      <property name="location"><value>/sakai_resources/aplw.html</value></property>
   </bean>
      <bean id="deleteResource" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>aplz</value></property>
      <property name="name"><value>Delete Resource</value></property>
      <property name="location"><value>/sakai_resources/aplz.html</value></property>
      </bean>
    
          <bean id="replaceResource" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>aply</value></property>
      <property name="name"><value>ReplaceResource</value></property>
      <property name="location"><value>/sakai_resources/aply.html</value></property>
   </bean>
   
    <bean id="org.sakaiproject.api.app.help.TableOfContents" 
          class="org.sakaiproject.component.app.help.model.TableOfContentsBean">
      <property name="name"><value>root</value></property>
      <property name="categories">
         <list>
            <bean id="resourceCategory" class="org.sakaiproject.component.app.help.model.CategoryBean">
               <property name="name"><value>Resources</value></property>
               <property name="resources">
                  <list>
                     <ref bean="resourceOverview"/>
                     <ref bean="createResource"/>
                     <ref bean="reviseResource"/>
                      <!-- <ref bean="replaceResource"/> -->
                      <ref bean="moveResource"/>
                     <ref bean="deleteResource"/>
                  </list>
               </property>
            </bean>
           </list>
         </property>
       </bean>
</beans>
