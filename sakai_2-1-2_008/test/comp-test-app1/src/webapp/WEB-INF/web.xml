<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_9" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>sakai-comp-test</display-name>
    <description>Sakai 2 component test</description>

	<!-- list of components to load locally -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/local.xml</param-value>
    </context-param>

	<!-- list of components to load into the shared components -->
    <context-param>
        <param-name>contextSharedLocation</param-name>
        <param-value>/WEB-INF/shared.xml</param-value>
    </context-param>

    <filter>
        <filter-name>Sakai Request Filter</filter-name>
        <filter-class>org.sakaiproject.util.RequestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Sakai Request Filter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>

    <!-- Test Servlet -->
    <servlet>
        <servlet-name>Component Test 1 Servlet</servlet-name>
        <servlet-class>org.sakaiproject.tool.test.CompTest1Tool</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

	<!-- Test Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>Component Test 1 Servlet</servlet-name>
        <url-pattern>/test1/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>org.sakaiproject.util.ContextLoaderListener</listener-class>
    </listener>

	<welcome-file-list>
	  <welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
