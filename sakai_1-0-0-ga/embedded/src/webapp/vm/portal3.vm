#if (!$sakai_fragment)
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
		<title>$config.getString("ui.service","") : $site.Title : $page.Title</title>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<link href="${sakai_portalskin}skin/${sakai_skin_id}.css" type="text/css" rel="stylesheet" media="all" />
		<script type="text/javascript" language="JavaScript" src="/sakai-chef-tool/js/headscripts.js">
		</script>
	</head>

	<body marginwidth="0" marginheight="0" topmargin="0" leftmargin="0">
#end

		<table cellpadding="0" cellspacing="0" border="0" width="100%">
			<tr>
				<td width="100%">
					<iframe
						name="sitenav"
						id="sitenav"
				#if ($minimal)
						height = "30"
				#else
					#if ($loggedIn)
						height="104"
					#else
						height="80"
					#end
				#end
						width="100%"
						frameborder="0"
						marginwidth="0"
						marginheight="0"
						scrolling="no"
						src="$!{config.PortalTunnelUrl}/sakai-chef-tool/sitenav?site=$site.Id">
					</iframe>
				</td>
			</tr>
		</table>

		<table class="content-table" cellpadding="0" cellspacing="0" border="0" width="100%">
			<tr>
				<td class="divColor" id="nav" valign="top">
						#if ($site.Status == 1)
							<div class="sakaiAlertBox">
								Unpublished site
							</div>
						#end
					<div id="divLogo" style="text-align:center">
						#if($site.IconUrl)
							<img src="$site.IconUrlFull" border="0" />
						#end
					</div>
					<div id="leftnavlozenge">
						<ul>
							#foreach($p in $site.Pages)
								#if ($p.id == $page.Id)
									<li><a class="selected" href="#">$p.Title</a></li>
								#else
									<li><a href="$p.Url">$p.Title</a></li>
								#end
							#end
						</ul>
					</div>

					## courier only if logged in
					#if ($loggedIn)
						<iframe
							name="courier"
							id="courier"
							title="courier"
							height="1"
							width="1"
							frameborder="0"
							marginwidth="0"
							marginheight="0"
							src="$!{config.PortalTunnelUrl}/sakai-chef-tool/courier?site=$site.Id&page=$page.Id&auto=courier">
						</iframe>
					#end

					#if ($loggedIn)
						<div style="text-indent:1em;font-size:70%;margin:0 0 1em 0;white-space:nowrap;width:auto">
							Users present:
						</div>
						
						## presence for site (could be site/page if we add the &page=page.Id parameter)
						<iframe
							name="presence"
							id="presence"
							title="presence"
							width="99%"
							height="200"
							frameborder="0"
							marginwidth="0"
							marginheight="0"
							scrolling="auto"
							style="width:8em"
							src="$!{config.PortalTunnelUrl}/sakai-chef-tool/presence?site=$site.Id">
						</iframe>
					#end

				</td>
				<td style="padding:.5em .3em .5em .3em;" valign="top">

##					<div id ="chefPaneTitle" class ="sakaiPaneTitle">
##						$site.Title : $page.Title
##					</div>

					#foreach($t in $page.getTools(0))
							<iframe
								name="$validator.escapeJavascript("Title$t.Id")"
								id="$validator.escapeJavascript("Title$t.Id")"
								title="Title Bar"
								class="channelTitleIframe"
								height="20"
								width="95%"
								frameborder="0"
								marginwidth="0"
								marginheight="0"
								scrolling="no"
								align="middle"
								src="$config.getToolRegistration($t.ToolId).Url?pid=$t.Id&panel=Title">
							</iframe>
						<div class="uportalchannelcontent">
							<iframe
								name="$validator.escapeJavascript("Main$t.Id")"
								id="$validator.escapeJavascript("Main$t.Id")"
								height="50"
								width="100%"
								title="$t.Title"
								frameborder="0"
								marginwidth="0"
								marginheight="0"
								scrolling="auto"
								src="$config.getToolRegistration($t.ToolId).Url?pid=$t.Id&panel=Main">
							</iframe>
						</div>
## need this separator?
						<div style="height:.3em;"></div>

					#end
				</td>
		#if ($page.Layout==1)
				<td style="margin:0 0 0 0;padding:.5em .3em .5em .3em;width:50%" valign="top"> <!-- 50% %%% -->
					#foreach($t in $page.getTools(1))
							<iframe
								name="$validator.escapeJavascript("Title$t.Id")"
								id="$validator.escapeJavascript("Title$t.Id")"
								title="Title Bar"
								height="20"
								width="95%"
								frameborder="0"
								marginwidth="0"
								marginheight="0"
								scrolling="no"
								align="middle"
								src="$config.getToolRegistration($t.ToolId).Url?pid=$t.Id&panel=Title">
							</iframe>
						<div class="uportalchannelcontent">
							<iframe
								name="$validator.escapeJavascript("Main$t.Id")"
								id="$validator.escapeJavascript("Main$t.Id")"
								height="50"
								width="98%"
								title="$t.Title"
								frameborder="0"
								marginwidth="0"
								marginheight="0"
								scrolling="auto"
								src="$config.getToolRegistration($t.ToolId).Url?pid=$t.Id&panel=Main">
							</iframe>
						</div>

						<div style="height:.3em;"></div>

					#end
				</td>
		#end
			</tr>
		</table>

		<table cellpadding="0" cellspacing="0" border="0" width="100%">
			<tr valign="top">
				<td>
					<div align="center" class="sakaiExternalNav">|
						#foreach ($link in $bottomnav)
						$link | 
						#end
					</div>
					<div class="sakaiPortalFooter" align="center">
						<a href="http://sakaiproject.org" target="_blank"><img border="0" src="/sakai-embedded/image/sakai_powered.gif" alt="Powered by Sakai" /></a><br />
						<span class="sakaiCopyrightInfo">&copy; 2003, 2004 sakaiproject.org. All rights reserved.<br />
						$config.getString("ui.service","Service") $config.getString("version.service","?") - Sakai $config.getString("version.sakai","?") - Server "$config.ServerId"</span>
					</div>
				</td>
			</tr>
		</table>

#if (!$sakai_fragment)
	</body>
</html>
#end
