<?xml version="1.0"?>

<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/j2ee/dtds/web-app_2.3.dtd">

<web-app>
    <display-name>sakai-embedded</display-name>
    <description>Sakai Embedded</description>

	<!-- the vm handling servlet -->
	<servlet>
		<servlet-name>
		   vm
		</servlet-name>
		<servlet-class>
			org.sakaiproject.vm.VelocityServlet
		</servlet-class>
		<init-param>
			<param-name> properties </param-name>
			<param-value> velocity.properties </param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- the portal servlet -->
	<servlet>
		<servlet-name>
		   sedna
		</servlet-name>
		<servlet-class>
			org.sakaiproject.portal.sedna.SednaServlet
		</servlet-class>
		<init-param>
			<param-name> face </param-name>
			<param-value> portal3 </param-value>
			<!-- <param-value> portal </param-value> -->
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

 	<servlet-mapping>
	   <servlet-name>
		  vm
	   </servlet-name>
	   <url-pattern>
		 *.vm
	   </url-pattern>
	</servlet-mapping>

 	<servlet-mapping>
	   <servlet-name>
		  sedna
	   </servlet-name>
	   <url-pattern>
		 /portal/*
	   </url-pattern>
	</servlet-mapping>

	<welcome-file-list>
	  <welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
