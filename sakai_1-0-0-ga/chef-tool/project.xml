<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<name>Sakai CHEF Tool Module</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-chef-tool</id>
	<currentVersion>1.0.0</currentVersion>
	<organization>
		<name>University of Michigan</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2003</inceptionYear>

	<dependencies>

		<!-- servlet -->
		<dependency>
			<groupId>servletapi</groupId>
			<artifactId>servletapi</artifactId>
			<version>2.3</version>
		</dependency>

		<!-- velocity : include in the .war -->
		<dependency>
			<groupId>velocity</groupId>
			<artifactId>velocity</artifactId>
			<version>1.3.1</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>logkit</groupId>
			<artifactId>logkit</artifactId>
			<version>1.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>oro</groupId>
			<artifactId>oro</artifactId>
			<version>2.0.8</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<!-- to be able to access the Sakai utilitiy classes -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util</artifactId>
			<version>1.0.0</version>
		</dependency>

		<!-- to be able to access the Sakai velocity servlet support -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-velocity</artifactId>
			<version>1.0.0</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<!-- to be able to access the Sakai component manager -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-component</artifactId>
			<version>1.0.0</version>
		</dependency>

		<!-- to be able to use the Sakai Service APIs -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-service</artifactId>
			<version>1.0.0</version>
		</dependency>

		<!-- fop -->
		<dependency>
			<groupId>fop</groupId>
			<artifactId>fop</artifactId>
			<version>0.20.5</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>avalon-framework</groupId>
			<artifactId>avalon-framework</artifactId>
			<version>20020627</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.6.0</version>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xmlParserAPIs</artifactId>
			<version>2.2.1</version>
		</dependency>
		<dependency>
			<groupId>batik</groupId>
			<artifactId>batik</artifactId>
			<version>1.5-fop-0.20-5</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

		<!-- other resources for the jar - the message bundles -->
		<resources>
			<resource>
				<directory>${basedir}/src/bundle</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	</build>

</project>
