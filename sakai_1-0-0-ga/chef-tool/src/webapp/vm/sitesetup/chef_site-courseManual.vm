##<!-- $Header: /cvs/sakai/chef-tool/src/webapp/vm/sitesetup/chef_site-courseManual.vm,v 1.6 2004/08/27 20:10:43 zqian.umich.edu Exp $ -->## Creating course site step 2: Manually creat a course site<div class="chefPortletContainer">	##if($menu)#toolbar($menu)#end<br/><br/>	<div class ="chefPortletToolBarMessage">		Creating a course site...	</div>	<div class="chefPortletContent">		#if ($alertMessage)			<div class="chefAlertBox">Alert: $validator.escapeHtml($alertMessage)</div>			<div style="display:block;clear:both"></div>		#end		<div class="chefPageviewTitle">			Step#if($from_auto_manual) 3#else 2#end: Enter course/sections that will be included in the class site. A <span class ="chefRequiredInline"> means</span> required information.		</div>		<fieldset>			<legend>				Class information			</legend>			<form name = "selectCourseForm" method = "post" action="#toolForm("SiteAction")">				<input type="hidden" name="option" value="add" />				<input type="hidden" name="eventSubmit_doManual_add_course" value="x" />				<div class="chefSectionMessage">					<div class="chefSectionMessage">						Academic Term:						#foreach($term in $termList)							#if($term.id == $form_term)								$term.text							#end						#end					</div>				</div>				<br />				#if ($!size)					<div class="chefSectionTitle">						You have so far selected the following course/section(s) for this course site: <br />						<ul>							#foreach ($i in [0..$size])								<li>$validator.escapeHtml($selectedUmiacCourseSection.get($i))</li>							#end						</ul> 					</div>					#end				<div class="chefSectionMessage">					<table class="chefEditItem">						<tr>							<td colspan="3">								Number of course/sections you would like included in this class site: 								<select name="number" id="select" onchange="document.selectCourseForm.option.value='change';javascript:document.selectCourseForm.submit();" tabindex = "1">									#foreach ($j in [1 .. 10])										#if ($j==$currentNumber)											<option value="$j" selected="selected">$j</option>										#else											<option value="$j">$j</option>										#end									#end								</select>							</td>						</tr>						<tr>							<td>									Subject:(ie PSYCH)<span class ="chefRequiredInline"> </span>													</td>							<td>								Course:(ie 101)<span class ="chefRequiredInline"> </span>							</td>							<td>									Sections:(ie 001)<span class ="chefRequiredInline"> </span>							</td>						</tr>						#set ($count = 2)
						#foreach ($k in [0..$listSize])							<tr>								<td>									<input type="text" name="subject$k"  tabindex="$count" size="8" maxlength="8"										#if($form_subject)											value="$!subjects.get($k)"										#end										/> 									#set ($count = $count + 1)								</td>								<td>									<input type="text" name="course$k" tabindex="$count" size="3" maxlength="3"										#if($form_course)											value="$!courses.get($k)"										#end										/>									#set ($count = $count + 1)								</td>								<td>									<input type="text" name="section$k" tabindex="$count" size="3" maxlength="3"	 									#if($form_section)											value="$!sections.get($k)"										#end										/>									#set ($count = $count + 1)								</td>							</tr>						#end					</table>					<table class="chefEditItem">						<tr>							<td colspan="2">								Site Authorization:<br />								At this time we cannot verify you are the instructor of record, please enter the username of 								a person that can verify you can create this site (ex. department head, previous semester instructor). 								An email requesting authorization will be sent to this person.							</td>						</tr>						<tr>							<td colspan="2">								&nbsp;							</td>						</tr>						<tr>							<td nowrap="nowrap" valign="top">								<span class ="chefLabel">Authorizer's username:<span class ="chefRequiredInline"> </span></span>							</td>							<td>								<input type="text" name="uniqname" tabindex="$count" size="40" value="$!value_uniqname"/>								<div class="chefInlineInstructions">									Email will be sent asking for authorization for you to create this site.								</div>								#set ($count = $count + 1)							</td>						</tr>						<tr>							<td nowrap="nowrap" valign="top">								<span class ="chefLabel">Special Instructions:</span>							</td>							<td>								<textarea name="additional" rows="4" cols="40" tabindex="$count" wrap="virtual">$validator.escapeHtmlTextarea($form_additional)</textarea>								<div class="chefInlineInstructions">									Please enter additional comments that may help us authorize your site request.								</div>								#set ($count = $count + 1)							</td>						</tr>					</table>				</div>					<br />			</fieldset>				<input type="hidden" name="back" value="$back" />			<input type="hidden" name="template-index" value="39" />			<input type="hidden" name="continue" value="4" />			<div class="chefButtonRow">				<input type="submit" name="Add" 						value="Continue" 						onClick="document.selectCourseForm.option.value='add'; document.selectCourseForm.submit(); return false;" />				<input type="submit" name="Back" 						value="Back"						onClick="document.selectCourseForm.option.value='back'; document.selectCourseForm.submit(); return false;" />				<input type="submit" name="Cancel" 						value="Cancel" 						onClick="document.selectCourseForm.option.value='cancel'; document.selectCourseForm.submit(); return false;"/>			</div>		</form>	</div></div>