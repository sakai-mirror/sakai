<div class="chefPortletContainer">
    <div class="chefPortletContent">
        #if ($alertMessage)<div class="chefAlertBox">Alert: $validator.escapeHtml($alertMessage)</div>#end

        #if (!$alertMessage)
            <div class="chefInfoBox">
               Sorry. Your comments/questions can't be sent out at this time. Please try again. Or <a href="mailto:$config.getString("mail.support")">email us at $config.getString("mail.support")</a>.
            </div>
        #end

        <form action="#toolForm("$action")" method="post">
        <p><div class="chefButtonRow">
            <input type="submit" name="eventSubmit_doNew" value="New comments" />
            <input type="submit" name="eventSubmit_doDoc" value="Go back to the Help page" />
        </div></p>
        </form>

    </div>
</div>