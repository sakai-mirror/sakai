##<!-- $Header: /cvs/sakai/chef-tool/src/webapp/vm/sitesetupgeneric/chef_site-newSiteConfirm.vm,v 1.2 2004/10/14 18:40:59 zqian.umich.edu Exp $ -->## Creating site step 4: confirmation page<div class="chefPortletContainer">	##if($menu)#toolbar($menu)#end<br/><br/>	<div class ="chefPortletToolBarMessage">		Creating a site...	</div>	<div class="chefPortletContent">		#if ($alertMessage)<div class="chefAlertBox">Alert: $validator.escapeHtml($alertMessage)</div>#end		<div class="chefPageviewTitle">			You have indicated the following for your site. If these are correct, click Create Site to setup your site. Please click only once -- this will take a few seconds. If you need to make changes, click Back.		</div>		<form action="#toolForm("$action")" method="post">			<table class ="chefItemDetail" cellspacing="0" summary="info on the new site">				<tr>					<td class="chefLabel">						Site name:					</td>					<td>						$validator.escapeHtml($title)					</td>				</tr>				<tr>					<td class="chefLabel">						Description:					</td>					<td>						$validator.escapeHtml($description)					</td>				</tr>				<tr>					<td class="chefLabel">						Short description:					</td>					<td>						$validator.escapeHtml($short_description)					</td>				</tr>				<tr>					<td class="chefLabel">						Tools:					</td>					<td>						#if ($check_home)							Home<br />						#end						#foreach($tool in $toolRegistrationList)							#if ($toolRegistrationSelectedList.contains($tool.Id))								#if ($tool.Id.equals("chef.mailbox"))									$tool.Title: $emailId@$serverName <br />								#elseif ($tool.Id.indexOf("chef.news") != -1)									$tool.Title: $!newsTitles.get($tool.Id) <br />								#elseif ($tool.Id.indexOf("chef.iframe") != -1)									$tool.Title: $!wcTitles.get($tool.Id) <br />								#else									$tool.Title <br />								#end							#end						#end					</td>				</tr>				<tr>					<td class="chefLabel">						Visible to public:					</td>					<td>						#if ($include)							Yes						#else							No						#end					</td>				</tr>				<tr>					<td class="chefLabel">						Site contact name:					</td>					<td>						$validator.escapeHtml($!siteContactName)					</td>				</tr>				<tr>					<td class="chefLabel">						Site contact email:					</td>					<td>						$validator.escapeHtml($!siteContactEmail)					</td>				</tr>			</table>			<input type="hidden" name="back" value="10" />			<input type="hidden" name="template-index" value="38"/>			<input type="hidden" name="continue" value="41" />			<div class="chefButtonRow">				<input type="submit" name="eventSubmit_doFinish" value="Create Site" />				<input type="submit" name="eventSubmit_doBack" value="Back" />				<input type="submit" name="eventSubmit_doCancel_create" value="Cancel" />			</div>		</form>	</div></div>