<script type="text/javascript" language="JavaScript">
  focus_path = ["id"];
</script>
<div class="chefPortletContainer">
	<div class ="chefPortletToolBarMessage">
		Save As ...
	</div>
	<div class="chefPortletContent">
		#if ($alertMessage)<div class="chefAlertBox">Alert: $validator.escapeHtml($alertMessage)</div>#end
		<div class="chefPageviewTitle">
			Enter a new site id to create a new site that is a copy of the selected site.<br/>
			Note: only the Site definition is copied, not related resources.
		</div>
		<form action="#toolForm("$action")" method="post">
			<fieldset>
				<legend>
					Site
				</legend>
				<table class="chefEditItem" summary="Enter a new Site id.">
					<tr>
						<td class="chefLabel">
							<label for="id">
								<span class="chefAlert">*</span> Site Id:
							</label>
						</td>
						<td>
							<input type="text" name="id" id="id"/>
						</td>
					</tr>
				</table>
			</fieldset>
			<div class="chefButtonRow">
				<input type="submit" name="eventSubmit_doSaveas" value="Save" />
				<input type="submit" name="eventSubmit_doCancel_saveas" value="Cancel" />
			</div>
		</form>
	</div>
</div>
