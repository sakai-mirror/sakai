<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.3.dtd">

<web-app>

	<display-name>
		sakai-z-last
	</display-name>

    <servlet>
        <servlet-name>
           components
        </servlet-name>

        <servlet-class>
            org.sakaiproject.component.ComponentsServlet
        </servlet-class>

		<!-- signal this instance of the servlet to set ready -->
        <init-param>
            <param-name>set-ready</param-name>
            <param-value>true</param-value>            
        </init-param>

		<!-- we have no components to load -->

		<!-- pre-load all registered services -->
        <init-param>
            <param-name>preload</param-name>
            <param-value>*</param-value>            
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
       <servlet-name>
          components
       </servlet-name>
       <url-pattern>
         /components/*
       </url-pattern>
    </servlet-mapping>

    <welcome-file-list>
      <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
