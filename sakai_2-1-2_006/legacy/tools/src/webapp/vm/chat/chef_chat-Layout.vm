				<div  style="padding-bottom:.2em;margin-bottom:.5em;border-bottom:1px dotted gray">
					$tlang.getString("lay.note")
				</div>
				<iframe
					name="$validator.escapeJavascript("$panel-monitor")"
					id="$validator.escapeJavascript("$panel-monitor")"
					title="$panel-monitor"
					width="100%"
					height="300"
					frameborder="0"
					marginwidth="0"
					marginheight="0"
