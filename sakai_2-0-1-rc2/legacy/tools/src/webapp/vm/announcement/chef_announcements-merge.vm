<div class="portletBody"> 
	#if ($alertMessage)<div class="chefAlertBox">$tlang.getString("gen.alert") $validator.escapeHtml($alertMessage)</div>#end
	<form name="Options" action="#toolForm("$action")" method="post">
		<h3>
				$tlang.getString("merge.show")
		</h3>
		<p class="instruction">
			$tlang.getString("merge.select")
		</p>
		<table class="listHier" cellspacing="0"  style="margin-top:2em">
		  <tr> 
			<th id="announcementSite"><div align="left">$tlang.getString("gen.site")</div></th>
			<th id="checkbox"><div align="left">$tlang.getString("merge.showann")</div></th>
		  </tr>
		  #set ($siteNumber =1)
		  #foreach ($announcementEntry in $mergedAnnouncementsCollection)
			#if ($announcementEntry.isVisible())
				<tr> 
					<td headers="announcementSite">$announcementEntry.getDisplayName()</td>
					<td headers="checkbox">
						<input type="checkbox" id="site$siteNumber" name="$announcementEntry.getReference()" value="$announcementEntry.getReference()"
						#if($announcementEntry.isMerged())
						checked
						#end
					/>
					<label for="site$siteNumber">Yes</label></td>
				 </tr>
				 #set($siteNumber=$siteNumber + 1)
			#end
		  #end
		 </table>
		<div class="act">
			<input type="submit" class="active" name="eventSubmit_doUpdate" value="$tlang.getString("gen.save")" />
			<input type="submit" name="eventSubmit_doCancel" value="$tlang.getString("gen.cancel")" />
		</div>
		<input type="hidden" name="state" value="$state" />
	</form>
</div>

