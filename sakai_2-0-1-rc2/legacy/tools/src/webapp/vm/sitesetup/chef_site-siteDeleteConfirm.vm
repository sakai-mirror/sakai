<div class="portletBody">
	<h3>
		$tlang.getString("sitegen.sitedel.remov")
	</h3>
	#if ($alertMessage)<div class="chefAlertBox">$tlang.getString("sitegen.sitedel.alert") $validator.escapeHtml($alertMessage)</div>#end
	<form action="#toolForm("$action")" method="post">
	#if($removals && $removals.size() != 0)
		<div class="chefAlertBox">
			$tlang.getString("sitegen.sitedel.deleting")
			#if($removals.size() == 1)
				$tlang.getString("sitegen.sitedel.you")
			#else
				$tlang.getString("sitegen.sitedel.you")
			#end
			#foreach($site in $removals)
				<div class="indnt3">
					<input type="hidden" name="selectedMembers" value="$site.getId()">
						$validator.escapeHtml($site.getTitle()) <br />
				</div>
			#end
			$tlang.getString("sitegen.sitedel.deleting1")
		</div>
	#end
		<input type="hidden" name="continue" value="0" />
		<input type="hidden" name="template-index" value="8" />
		<input type="hidden" name="back" value="0" />
		<div class="act">
		#if($removals && $removals.size() != 0)
			<input type="submit" name="eventSubmit_doSite_delete_confirmed" value="$tlang.getString("sitegen.sitedel.remove")" />
		#end
			<input type="submit" name="eventSubmit_doCancel" value="$tlang.getString("sitegen.sitedel.cancel")" />
		</div>
	</form>
</div>

