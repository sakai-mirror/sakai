<project name="Navigo" default="dist" basedir=".">
    <description>
      audio upload applet build file subproject
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src/java"/>
  <property name="lib" location="lib"/>
  <property name="conf" location="conf"/>
  <property name="build" location="build/classes"/>
  <property name="dist"  location="dist"/>
<!--  <property name="java.home" location="/usr/java"/>-->

  <path id="audio.applet.class.path">
    <pathelement path="${classpath}"/>
                       <pathelement location="src/java"/>
    <pathelement location="lib"/>
    <pathelement location="build/classes"/>
  </path>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac source="1.3" srcdir="${src}" destdir="${build}">
      <classpath refid="audio.applet.class.path"/>
    </javac>
  </target>

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/applet"/>

    <!-- Put everything in ${build} into the CapturePlayback.jar file -->
    <jar jarfile="${dist}/applet/CapturePlayback.jar" >
      <fileset dir="${build}"/>
      <fileset dir="${lib}"/>
      <fileset dir="${conf}">
        <include name="*.properties"/>
      </fileset>
    </jar>
  </target>


  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
    <delete dir="${appletjardir}"/>
  </target>
</project>

