## Might want to get these dynamically 
<div class="portletBody">
	##if($menu)#toolbar($menu)#end<br/><br/>
	#if ($alertMessage)
		<div class="alertMessage">$tlang.getString("sitinfimp.alert") $validator.escapeHtml($alertMessage)</div>
		<div style="display:block;clear:both"></div>
	#end
	<h3>
		$tlang.getString("sitinfimp.reuse")
	</h3>
	<p class="step">
		$tlang.getString("sitinfimp.reuse")
	</p>
	<p class="instruction">
		$tlang.getString("sitinfimp.youcan")
	</p>
	<form name="featuresForm" action="#toolForm("$action")" method="post">
		#foreach($site in $sites)
			#if ($!currentSite && ($site.Id != $!currentSite.Id))
				<p class="checkbox indnt3">
				<input type="checkbox" name="importSites" id="site_$site.getId()" value="$site.getId()" 
					#if ($!importSiteList.containsKey($!site))
						checked="checked"
					#end
				 />
					<label for="site_$site.getId()">
						$validator.escapeHtml($site.getTitle())
					</label>
				</p>	
			#end
		#end
		<input type="hidden" name="back" value="12" />
		<input type="hidden" name="template-index" value="28" />
		<input type="hidden" name="continue" value="27" />
		<p class="act">
			<input type="submit" class="active" name="eventSubmit_doContinue" value="$tlang.getString("sitinfimp.con")" />
			<input type="submit" name="eventSubmit_doCancel" value="$tlang.getString("sitinfimp.can")" />
		</p>
	</form>
</div>
