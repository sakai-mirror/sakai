<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
    <enterprise-beans>
        <session>
            <display-name>EvaluationService</display-name>
            <ejb-name>EvaluationService</ejb-name>
            <home>org.navigoproject.service.evaluation.ejb.EvaluationServiceHomeRemote</home>
            <remote>org.navigoproject.service.evaluation.ejb.EvaluationService</remote>
            <ejb-class>org.navigoproject.service.evaluation.ejb.EvaluationServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>AssessmentService</display-name>
            <ejb-name>AssessmentService</ejb-name>
            <home>org.navigoproject.osid.assessment.ejb.AssessmentServiceHomeRemote</home>
            <remote>org.navigoproject.osid.assessment.ejb.AssessmentService</remote>
            <ejb-class>org.navigoproject.osid.assessment.ejb.AssessmentServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>QuestionPoolService</display-name>
            <ejb-name>QuestionPoolService</ejb-name>
            <home>org.navigoproject.osid.questionpool.ejb.QuestionPoolServiceHomeRemote</home>
            <remote>org.navigoproject.osid.questionpool.ejb.QuestionPoolService</remote>
            <ejb-class>org.navigoproject.osid.questionpool.ejb.QuestionPoolServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>AssessmentService</ejb-name>
                <method-name>*</method-name>
            </method>
            <method>
                <ejb-name>QuestionPoolService</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
