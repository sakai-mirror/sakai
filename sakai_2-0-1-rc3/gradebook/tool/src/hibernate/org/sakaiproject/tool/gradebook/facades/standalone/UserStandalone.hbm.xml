<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping default-cascade="none" package="org.sakaiproject.tool.gradebook">
	<class name="org.sakaiproject.tool.gradebook.facades.standalone.UserStandalone" table="GB_USER_T">

		<id name="id" column="ID" type="long" access="field">
			<generator class="native">
				<param name="sequence">GB_USER_S</param>
			</generator>
		</id>

		<property name="userUid" column="AUTH_ID" type="string" not-null="true" unique="true" access="field" />
		<property name="displayName" column="DISPLAY_NAME" type="string" not-null="true" unique="false" access="field" />
		<property name="sortName" column="SORT_NAME" type="string" not-null="true" unique="false" access="field" />
		<property name="displayUid" column="DISPLAY_UID" type="string" not-null="true" unique="false" access="field" />

	</class>
</hibernate-mapping>