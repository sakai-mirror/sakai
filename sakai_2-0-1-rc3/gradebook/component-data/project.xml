<?xml version="1.0" encoding="UTF-8"?>
<project>
	<pomVersion>3</pomVersion>
	<id>sakai-gradebook-component-data</id>
	<groupId>sakaiproject</groupId>
	<name>Sakai Gradebook Component Data</name>
	<currentVersion>2.0.1</currentVersion>
	<organization>
		<name>Sakai Project</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2004</inceptionYear>

   	<properties>
		<deploy.type>jar</deploy.type>
<!--
		<deploy.target>shared</deploy.target>
-->
	</properties>

	<dependencies>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-gradebook-service</artifactId>
			<version>${pom.currentVersion}</version>
		</dependency>

		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
		</dependency>

		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.0</version>
		</dependency>

	</dependencies>


	<build>
		<nagEmailAddress>
			gradebook@collab.sakaiproject.org
		</nagEmailAddress>
		<sourceDirectory>src/java</sourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src/hibernate</directory>
				<includes>
					<include>ehcache.xml</include>
					<include>**/*.hbm.xml</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>

