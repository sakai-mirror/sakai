<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<name>Sakai Component API</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-component</id>
	<currentVersion>2.0.1</currentVersion>
	<organization>
		<name>University of Michigan</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2003</inceptionYear>

	<properties>
		<!-- deploy as a jar -->
		<deploy.type>jar</deploy.type>
		<!-- deploy to "shared", "common" or "server" -->
		<deploy.target>shared</deploy.target>
	</properties>

	<dependencies>

		<dependency>
			<groupId>servletapi</groupId>
			<artifactId>servletapi</artifactId>
			<version>2.4-20040521</version>
			<url>http://java.sun.com/products/servlet/</url>
		</dependency>

		<dependency>
			<groupId>springframework</groupId>
			<artifactId>spring</artifactId>
			<version>1.1.5</version>
			<url>http://www.springframework.org</url>
			<properties>
				<!-- deploy dependency jar to "shared", "common" or "server": use <war.bundle>true</war.bundle> to include in war -->
				<deploy.target>shared</deploy.target>
			</properties>
		</dependency>

		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
			<url>http://jakarta.apache.org/commons/logging/</url>
			<properties>
				<!-- deploy dependency jar to "shared", "common" or "server": use <war.bundle>true</war.bundle> to include in war -->
				<deploy.target>shared</deploy.target>
			</properties>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.8</version>
			<url>http://logging.apache.org/log4j/</url>
			<properties>
				<!-- deploy dependency jar to "shared", "common" or "server": use <war.bundle>true</war.bundle> to include in war -->
				<deploy.target>common</deploy.target>
			</properties>
		</dependency>

		<dependency>
			<groupId>OKI</groupId>
			<artifactId>OkiOSID</artifactId>
			<version>2.0</version>
			<url>http://sourceforge.net/projects/okiproject</url>
			<properties>
				<!-- deploy dependency jar to "shared", "common" or "server": use <war.bundle>true</war.bundle> to include in war -->
				<deploy.target>shared</deploy.target>
			</properties>
		</dependency>

	</dependencies>

	<build>

		<sourceDirectory>src/java</sourceDirectory>

		<!-- other resources for the jar - properties and xml files-->
		<resources>
			<resource>
				<directory>${basedir}/src/config</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>

	</build>

</project>
