<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<name>Sakai JSF Widgets (from Sakai 1.0 and 1.5)</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-jsf-widgets-1</id>
	<currentVersion>2.0.1</currentVersion>
	<organization>
		<name>University of Michigan</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2003</inceptionYear>
	<package>org.sakaiproject</package>

	<properties>
		<!-- build as a jar -->
		<deploy.type>jar</deploy.type>
	</properties>

	<dependencies>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-jsf-widgets-sun</artifactId>
			<version>${pom.currentVersion}</version>
		</dependency>

		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
		</dependency>

		<dependency>
			<groupId>jsf</groupId>
			<artifactId>jsf-impl</artifactId>
			<version>1.1.01</version>
		</dependency>

		<dependency>
			<groupId>jsf</groupId>
			<artifactId>jsf-api</artifactId>
			<version>1.1.01</version>
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-web</artifactId>
			<version>${pom.currentVersion}</version>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-tool</artifactId>
			<version>${pom.currentVersion}</version>
		</dependency>

		<dependency>
			<groupId>servletapi</groupId>
			<artifactId>servletapi</artifactId>
			<version>2.4-20040521</version>
		</dependency>

		<dependency>
			<groupId>jspapi</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.0-20040521</version>
		</dependency>

	</dependencies>

	<build>

		<sourceDirectory>src/java</sourceDirectory>

		<resources>

			<resource>
				<directory>${basedir}/src/bundle</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>

			<resource>
				<directory>${basedir}/src</directory>
				<includes>
					<include>META-INF/*.tld</include>
					<include>META-INF/*.xml</include>
				</includes>
			</resource>

		</resources>

	</build>

</project>
