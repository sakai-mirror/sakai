<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<extend>../../master/project.xml</extend>
	<name>Sakai Admin su Tool</name>
	<groupId>sakaiproject</groupId>
	<id>su-tool</id>
	<currentVersion>${sakai.version}</currentVersion>
	<organization>
		<name>Sakai Foundation</name>
		<url>http://sakaiproject.org</url>
	</organization>
	<inceptionYear>2005</inceptionYear>

	<properties>
		<!-- deploy as a war -->
		<deploy.type>war</deploy.type>
	</properties>
	
	<dependencies>
	
        <!-- Sakai Project Dependencies Particular to this App -->
        <dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-session</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		
        <dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-legacy-service</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-web</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-java</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<!-- Generic Sakai JSF Tool Dependencies -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-jsf-tool</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-jsf-app</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-jsf-widgets</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-jsf-widgets-sun</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-jsf-tool</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		
		<!-- Generic JSF Dependencies Below -->	
		<dependency>
			<groupId>jsf</groupId>
			<artifactId>jsf-impl</artifactId>
			<version>1.1.01</version>
		<properties>
			<war.bundle>true</war.bundle>
		</properties>        
		</dependency>

		<dependency>
			<groupId>jsf</groupId>
			<artifactId>jsf-api</artifactId>
			<version>1.1.01</version>
		<properties>
			<war.bundle>true</war.bundle>
		</properties>        
		</dependency>
		
		<dependency>
			<groupId>jstl</groupId>
			<artifactId>jstl</artifactId>
			<version>1.0.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>
		
		<dependency>
			<groupId>taglibs</groupId>
			<artifactId>standard</artifactId>
			<version>1.0.4</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>

		<dependency>
			<groupId>commons-digester</groupId>
			<artifactId>commons-digester</artifactId>
			<version>1.6</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>

		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
  	        <version>3.1</version>
		</dependency>
		
		<dependency>
			<groupId>commons-beanutils</groupId>
			<artifactId>commons-beanutils</artifactId>
			<version>1.7.0</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>
		
		<!-- Also, it's nice to have logging -->
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>        
		</dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

		<!-- other resources for the jar - the message bundles -->
		<resources>
			<resource>
				<directory>${basedir}/src/bundle</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	
	</build>

</project>


