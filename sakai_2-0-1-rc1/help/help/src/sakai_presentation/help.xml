<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   <bean id="presentationOverview" class="org.sakaiproject.component.app.help.model.ResourceBean">
      <property name="docId"><value>arid</value></property>
      <property name="name"><value>Presentation Overview</value></property>
      <property name="location"><value>/sakai_presentation/arid.html</value></property>
      <property name="defaultForTool"><value>sakai.presentation</value></property>
   </bean>
   
    <bean id="org.sakaiproject.api.app.help.TableOfContents" 
          class="org.sakaiproject.component.app.help.model.TableOfContentsBean">
      <property name="name"><value>root</value></property>
      <property name="categories">
         <list>
            <bean id="presentationCategory" class="org.sakaiproject.component.app.help.model.CategoryBean">
               <property name="name"><value>Presentation</value></property>
               <property name="resources">
                  <list>
                     <ref bean="presentationOverview"/>
                  </list>
               </property>
            </bean>
           </list>
         </property>
       </bean>
</beans>
