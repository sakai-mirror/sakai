		<sourceDirectory>src/java</sourceDirectory>

		<resources>

			<resource>
				<directory>${basedir}/src/sql</directory>
				<includes>
					<include>**/*.sql</include>
				</includes>
			</resource>

			<resource>
				<directory>${basedir}/src/config</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>

			<resource>
				<directory>${basedir}/src/config</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>

		</resources>

