## enter the site title for duplicated site.
<div class="portletBody">
	#if ($alertMessage)<div class="alertMessage">$tlang.getString("sitdup.alert") $validator.escapeHtml($alertMessage)</div>#end
		<form name = "classInformationForm" method = "post" action="#toolForm("SiteAction")">
			<h3 class="insColor insBak insBor">
				$tlang.getString("sitdup.dupsit") $siteTitle	
			</h3>
				#if (!$!siteDuplicated)
					<p class="instruction">
						#if ($!isCourseSite)
							$tlang.getString("sitdup.dupaclacourse")
						#else
							$tlang.getString("sitdup.dupaclanoncourse")
						#end
					</p>
					<p class="shorttext">
						<span class ="reqStar">*</span>
						<label for="title">
							$tlang.getString("sitdup.sitti")
						</label>
						<input type="text" name="title" id="title" maxlength="20" size="20" value="" />
					</p>	
					<input type="hidden" name="back" value="12" />
					<input type="hidden" name="continue" value="12" />
				#else
					<p class="instruction">
						$tlang.getString("sitdup.dupsit2") "$!duplicatedName" $tlang.getString("sitdup.hasbeedup")
					</p>
				#end
			<input type="hidden" name="template-index" value="29" />
			<div class="act">
				#if (!$!siteDuplicated)
					<input type="submit" class="active" name="eventSubmit_doContinue" value="$tlang.getString("sitdup.dup")" />
					<input type="submit" name="eventSubmit_doCancel" value="$tlang.getString("sitdup.can")" />
				#else
					<input type="submit" class="active" name="eventSubmit_doContinue" value="$tlang.getString("pubuncon.fin")" />
				#end
			</div>
		</form>
</div>
