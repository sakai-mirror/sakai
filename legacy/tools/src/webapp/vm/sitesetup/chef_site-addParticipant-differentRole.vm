## Add participants to the worksite with different role
<div class ="portletBody">
	#if ($alertMessage)<div class="alertMessage">$tlang.getString("gen.alert") $validator.escapeHtml($alertMessage)</div>#end
	<h3 class="insColor insBak insBor">
			$tlang.getString("adddif.choose")
	</h3>
	<p class="instruction">
		$tlang.getString("adddif.chroles") <span class="reqStarInline"> *</span>. 
	</p>
	<table cellspacing="0" cellpadding="0" class="itemSummary" summary ="Table describes roles available in the system." >
		#foreach ($role in $roles)
			<tr>
				<th>
					$role.Id
				</th>
				<td>
					#set($description = "")
					#set($description = $role.Description)
					$!description
				</td>
			</tr>
		#end
	</table>
	<form action="#toolForm("SiteAction")" method="post">
	<table cellspacing="0" cellpadding="0" class ="listHier" summary ="Table holds a radio button for role choices" >
			<tr>
				<th>
					$tlang.getString("addconf.username")
				</th>
				<th>
					$tlang.getString("addconf.role")
				</th>
			</tr>
			#foreach ($participant in $participantList)
				#set($uniqname = $participant.getUniqname())
				<tr>
## (gsilver)  label/id pair problems with below - as ids must begin with a-z and consist only of 0-9, a-z -_;: (eg - no "@")
					<td>
						<label for="$uniqname">$uniqname</label>
					</td>
					<td>
						<span class="reqStarInline">*</span>
						<select name="role$uniqname" id="$uniqname">
							<option value="">$tlang.getString("adddif.please")</option>
							#foreach($role in $roles)
								<option value ="$role.Id"
									#if($role.Id == $!selectedRoles.get($uniqname))
										selected="selected"
									#end
								>
									$role.Id
								</option>
							#end
						</select>
					</td>
				</tr>
			#end
		</table>
		<input type="hidden" name="back" value="5" />
		<input type="hidden" name="continue" value="21" />
		<input type="hidden" name="template-index" value="20" />
		<p class ="act">
			<input type="submit" class="active" name="eventSubmit_doContinue" value="$tlang.getString('gen.continue')" />
			<input type="submit" name="eventSubmit_doBack" value="$tlang.getString('gen.back')" />
			<input type="submit" name="eventSubmit_doCancel" value="$tlang.getString('gen.cancel')" />
		</p>
	</form>
</div>
