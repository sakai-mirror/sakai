##<!-- $Header: /cvs/sakai2/legacy/tools/src/webapp/vm/sitesetup/chef_site-newSiteCourseManual.vm,v 1.4 2005/06/03 14:08:16 gsilver.umich.edu Exp $ -->
<div class="portletBody">
	##if($menu)#toolbar($menu)#end<br/><br/>
		#if (!$!site)
			<h3>$tlang.getString("man.creat")</h3>
			<p class="step">
				$tlang.getString("nscourse.choose")
			</p>
		#else
			<h3 class="insColor insBak insBor">$tlang.getString("man.edit")</h3>
		#end
		#if ($alertMessage)
			<div class="alertMessage">$tlang.getString("gen.alert") $validator.escapeHtml($alertMessage)</div>
			<div style="display:block;clear:both"></div>
		#end
			#if ($!site)
				<p>
				$tlang.getString("nscourse.already")
				</p>	
				#foreach($id in $!providerCourseList)
					<p style="margin:.3em 2em">
						$id
					</p>
				#end
				#foreach($id in $!manualCourseList)
					<p style="margin:.3em 2em">
						$id(requested)
					</p>
				#end
			#end
			<form name = "requestCourseForm" method = "post" action="#toolForm("$action")">
				<input type="hidden" name="option" value="add" />
				<input type="hidden" name="eventSubmit_doManual_add_course" value="x" />
				<p>
					$tlang.getString("nscourse.acad")
					$term.Id
				</p>
				#if ($!selectedProviderCourse)
					<div>
						$tlang.getString("man.sofar") #if($!site) $tlang.getString("man.toaddto") #else $tlang.getString("java.for") #end $tlang.getString("man.this") <br />
						<ul>
							#foreach ($item in $!selectedProviderCourse)
								<li>$item </li>
							#end
						</ul>
					</div>	
				#end
				<p>
					#if (!$!isFutureTerm)
						$tlang.getString("man.enter")
					#else
						$tlang.getString("man.enter2")
					#end
					 <span class="reqStarInline">*</span> $tlang.getString("man.means")
				</p>
				<table  border="0" cellpadding="4" summary="Table for manual input of course information.">
					<tr>
						#set($bound = $!form_requiredFields.size())
						#set($bound = $bound - 1)
						#foreach ($fieldCount in [0..$!bound])
								#set($field = $!form_requiredFields.get($fieldCount))
									<th id="$!field" style="font-weight:normal">	
										<span class ="reqStarInline">*</span>$field
									</th>
						#end
					</tr>
					#set ($count = 1)
					#foreach ($k in [0..$listSize])
						#set($courseFieldValues = $!fieldValues.get($k))
						<tr>
							#foreach ($fieldCount in [0..$!bound])
								#set($field = $!form_requiredFields.get($fieldCount))
								#set($fieldSize = 8)
								#set($fieldSize = $!form_requiredFieldsSizes.get($fieldCount))
								<td headers="$field">
									<input type="text" name="$field$k"  tabindex="$count" size="$!fieldSize" maxlength="$!fieldSize" value="$!courseFieldValues.get($fieldCount)" /> 
									#set ($count = $count + 1)
								</td>
							#end
						</tr>
					#end
					<tr>
						<td colspan="3" align="right">
							<select name="number" id="number" onchange="document.requestCourseForm.option.value='change';javascript:document.requestCourseForm.submit();" tabindex = "$count">
								<option selected="selected">$tlang.getString("man.addmore")</option>
								#foreach ($j in [1..3])
									<option value="$j">$j $tlang.getString("enw.more")</option>
								#end
							</select>
						</td>
					</tr>
				</table>
				<p>
					#if ($!isFutureTerm)
						<strong>$tlang.getString("man.siteroster")</strong><br />
						$tlang.getString("man.notverifyfuture1")$!weeksAhead $tlang.getString("man.notverifyfuture2")
					#else
						<strong>$tlang.getString("man.siteauth")</strong><br />
						$tlang.getString("man.notverify")
					#end
				</p>
				#if (!$!isFutureTerm)
					<p class="shorttext">
						<span class="reqStar">*</span>						
						<label for="uniqname">		
						   $tlang.getString("man.authoriz")
						</label>
						<input type="text" name="uniqname"  id="uniqname"   size="40" value="$!value_uniqname" />
						<br /><span class="labelindnt instruction">
						   $tlang.getString("man.email")
						</span>
					</p>
					<p class="shorttext">
						<label for="additional" class="block">
							$tlang.getString("man.spec")
						</label>
						<textarea id="additional"   name="additional" rows="4" cols="40" wrap="virtual">$validator.escapeHtmlTextarea($form_additional)</textarea>
						<br /><span  class="instruction labelindnt">
							$tlang.getString("man.please")
						</span>
					</p>	
				#end
			#set ($count = $count + 1)
			<input type="hidden" name="back" value="$back" />
			<input type="hidden" name="template-index" value="37" />
			<input type="hidden" name="continue" value="4" />
			<p class="act">
				<input type="button" name="Add" 
						value="$tlang.getString('gen.continue')" 
						class="active" 
						onclick="document.requestCourseForm.option.value='add'; document.requestCourseForm.submit(); return false;" />
				<input type="button" name="Back" 
						value="$tlang.getString('gen.back')"
						onclick="document.requestCourseForm.option.value='back'; document.requestCourseForm.submit(); return false;" />
				<input type="button" name="Cancel" 
						value="$tlang.getString('gen.cancel')" 
						onclick="document.requestCourseForm.option.value='cancel'; document.requestCourseForm.submit(); return false;" />
			</p>
		</form>
	</div>
