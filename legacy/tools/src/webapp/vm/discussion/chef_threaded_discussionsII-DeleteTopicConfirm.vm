<div class="portletBody">
	<h3>
		#if ($message.getReplyToDepth() == 0)
			## deleting topic
			$tlang.getString("deltop.deltop")
		#else
			#if ($message.hasReplies())
				$tlang.getString("delmes.2")
			#else
				$tlang.getString("delmes.1")
			#end
		#end
		##		$tlang.getString("deltop.deltop")
	</h3>
	#if ($alertMessage)<div class="chefAlertBox">$tlang.getString("gen.alert"); $validator.escapeHtml($alertMessage)</div><div style="display:block;clear:both"></div>#end
	<script type="text/javascript">
		focus_path = [ "eventSubmit_doDelete_topiic" ];
		if (parent) if (parent.parent) parent.parent.window.scrollTo(0,400);
	</script>
	#if (!$!allowRemove)
		<div class="chefAlertBox">$tlang.getString("youarenot6")</div><div style="display:block;clear:both" />
	#else
		#if ($message.getReplyToDepth() == 0)
			#if ($message.hasReplies())
				<div class="chefAlertBox">$tlang.getString("deltop.areyousure1") </div><div style="display:block;clear:both" />
			#else
				<div class="chefAlertBox">$tlang.getString("deltop.areyousure2")</div><div style="display:block;clear:both" />
			#end
		#else
			#if ($message.hasReplies())
				<div class="chefAlertBox">$tlang.getString("delmes.areyousure1") </div><div style="display:block;clear:both" />
			#else
				<div class="chefAlertBox">$tlang.getString("delmes.areyousure2")</div><div style="display:block;clear:both" />
			#end
		#end
	#end
		<form name="forNotLetDeleteSelectedOnLoad"></form>
			<table class="listHier" cellspacing="0">
				<tr>
					<th>$tlang.getString("gen.sub")</th>
					<th>$tlang.getString("gen.fro")</th>
					<th>$tlang.getString("gen.dat")</th>
				</tr>
				## J - need to know the thread dept of each message to indent appropriately (gsilver)
				## suiyy - please use "$message.ReplyToDepth" to get the indention depth
				<tr>
					<td>
						#if ($message.Header.draft)
							<span class="alert">$tlang.getString("gen.dra") </span>
						#end
						$validator.escapeHtml($message.Header.subject)
					</td>
					<td>$validator.escapeHtml($message.Header.From.DisplayName)</td>
					<td>$message.Header.Date.toStringLocalFull()</td>
				</tr>
				#foreach ($delete_item in $delete_messages)
					<tr>
						<td>
							#if ($delete_item.Header.draft)
								<span class="chefAlert">$tlang.getString("gen.dra") </span>
							#end
							$validator.escapeHtml($delete_item.Header.subject)
						</td>
						<td>$validator.escapeHtml($delete_item.Header.From.DisplayName)</td>
						<td>$delete_item.Header.Date.toStringLocalFull()</td>
					</tr>
				#end
			</table>
	
	<form action="#toolForm($action)" method="post">
		<div class="act">
			<input type="hidden" name="messageId" value="$message.id" />
			#if ($!allowRemove)
				<input type="submit" class="active"  name="eventSubmit_doDelete_message" id="eventSubmit_doDelete_message" 
					#if ($message.getReplyToDepth() == 0)
						value="$tlang.getString("deltop.deltop")"
					#else
						value="$tlang.getString("gen.del") $tlang.getString("gen.mes")"
					#end />
			#end
			<input type="submit" name="eventSubmit_doCancel_delete_message" value="$tlang.getString("gen.can")" />
		</div>
	</form>
</div>
