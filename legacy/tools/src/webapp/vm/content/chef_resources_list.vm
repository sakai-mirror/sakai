										value="$member.id" /><label for="list$num" class="skip">Select</label>
									#set($num = $num + 1)
									#if($member.canDelete())
										#set($removeCount = $removeCount + 1)
										#set($moveCount = $moveCount + 1)
										#if($selectedItems.contains($member.id))
											#set($rCount = $rCount + 1)
											#set($mCount = $mCount + 1)
										#end
									#end
									#if($member.canRead())
										#set($copyCount = $copyCount + 1)
										#if($selectedItems.contains($member.id))
											#set($cCount = $cCount + 1)
										#end
									#end
								#end
