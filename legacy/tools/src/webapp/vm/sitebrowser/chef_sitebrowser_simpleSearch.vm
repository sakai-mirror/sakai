<script type="text/javascript" language="JavaScript">
	focus_path = ["search"];
</script>
<div class="portletBody">
	
		<h3>$tlang.getString("se.search")</h3>
		<p class="instruction">$tlang.getString("se.complete")</p>
	
		<form action="#toolForm("$action")" method="post">		
		<fieldset>
			<legend class="radio">$tlang.getString("se.type")</legend>
			<div class="checkbox indnt1">
				<input type="radio" name="siteType" id="siteType" value="Any" checked="checked" onclick="clearNewCopyright(newcopyrighttext$i);" />
				<label for="siteType">$tlang.getString("se.any")</label>
			</div>
			#if ($siteTypes.size() > 0 )
				#set($siteTypeCount=0)
				#foreach ($type in $siteTypes)
				#set($siteTypeCount=$siteTypeCount + 1)
					#if ($type == $termSearchSiteType)
						<input type="hidden" name="ClassSiteFromSystem" value="true" />
						<div class="checkbox indnt1">
							<input  type="radio" name="siteType" id="siteType" value="$type" />
							<label for="classSite">$tlang.getString("se.course")</label>
						</div>
						<div class="indnt3">
							$tlang.getString("se.term")
							<select name="selectTerm">
							<option value="Any">$tlang.getString("se.any")</option>
							#foreach ($term in $terms)
							<option value="$term.Id">$term.Id</option>
							#end
							</select>
						</div>	
					#else
						<div class="checkbox indnt1">
							<input type="radio" name="siteType" id="siteType$siteTypeCount" value="$type" />
							<label for="siteType$siteTypeCount"  style="text-transform: capitalize">$type</label>
						</div>
					#end
				#end
			#end
		</fieldset>

		<div class="shorttext indnt1">
			<label for="shorttext1">$tlang.getString("se.search1")</label>
			<input type="text" name="search" id="search" size="32" maxlength="50" value="" onkeypress="formSubmitOnEnter(this, event)">
			<input type="hidden" name="eventSubmit_doSearch" id="eventSubmit_doSearch" value="Search for Sites" />
		</div>
		
		<p class="act">
			 <input type="submit" name="eventSubmit_doSearch" value="$tlang.getString("se.search")" />
		</p>
		</form>

</div>
