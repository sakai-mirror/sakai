<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   <bean id="announcementOverview" class="org.sakaiproject.component.app.help.model.ResourceBean">
      <property name="docId"><value>apkh</value></property>
      <property name="name"><value>Announcements Overview</value></property>
      <property name="location"><value>/sakai_announcements/apkh.html</value></property>
      <property name="defaultForTool"><value>sakai.announcements</value></property>
   </bean>

   <bean id="createAnnouncement" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>apkf</value></property>
      <property name="name"><value>Create Announcement</value></property>
      <property name="location"><value>/sakai_announcements/apkf.html</value></property>
   </bean>
      <bean id="postAnnouncement" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>apkg</value></property>
      <property name="name"><value>Post Announcement</value></property>
      <property name="location"><value>/sakai_announcements/apkg.html</value></property>
   </bean>
      <bean id="reviseAnnouncement" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>apkb</value></property>
      <property name="name"><value>Revise Announcement</value></property>
      <property name="location"><value>/sakai_announcements/apkb.html</value></property>
   </bean>
      <bean id="deleteAnnouncement" class="org.sakaiproject.component.app.help.model.ResourceBean">
         <property name="docId"><value>apkd</value></property>
      <property name="name"><value>Delete Announcement</value></property>
      <property name="location"><value>/sakai_announcements/apkd.html</value></property>
   </bean>
   
    <bean id="org.sakaiproject.api.app.help.TableOfContents" 
          class="org.sakaiproject.component.app.help.model.TableOfContentsBean">
      <property name="name"><value>root</value></property>
      <property name="categories">
         <list>
            <bean id="announcementCategory" class="org.sakaiproject.component.app.help.model.CategoryBean">
               <property name="name"><value>Announcement</value></property>
               <property name="resources">
                  <list>
                     <ref bean="announcementOverview"/>
                     <ref bean="createAnnouncement"/>
                     <ref bean="postAnnouncement"/>
                     <ref bean="reviseAnnouncement"/>
                     <ref bean="deleteAnnouncement"/>
                  </list>
               </property>
            </bean>
           </list>
         </property>
       </bean>
</beans>
