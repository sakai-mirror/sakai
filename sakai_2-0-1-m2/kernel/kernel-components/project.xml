<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<name>Sakai Kernel Components Package</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-kernel-components</id>
	<currentVersion>2.0.0</currentVersion>
	<organization>
		<name>University of Michigan</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2003</inceptionYear>

	<properties>
		<!-- deploy as a components -->
		<deploy.type>components</deploy.type>
	</properties>

	<dependencies>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-session-component</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-id-component</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-thread_local-component</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-tool-component</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-active-tool-component</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<!-- Id Generator Jar for sakai-id-component -->
		<dependency>
			<groupId>commons-id</groupId>
			<artifactId>commons-id</artifactId>
			<version>0.1-dev</version>
			<url>
				http://brutus.apache.org/gump/public/jakarta-commons-sandbox/commons-id/
			</url>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<!-- Concurrent Map for sakai-session-component, sakai-tool-component -->
		<dependency>
			<groupId>concurrent</groupId>
			<artifactId>concurrent</artifactId>
			<version>1.3.4</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<!-- xml util for sakai-tool-component -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-xml</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<!-- java util for sakai-session-component -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-java</artifactId>
			<version>${pom.currentVersion}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

	</build>

</project>
