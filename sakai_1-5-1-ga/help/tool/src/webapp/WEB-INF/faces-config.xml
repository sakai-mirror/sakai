<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<!-- =========== FACES CONFIGURATION FILE ================================== -->

<faces-config>

  <application>
    <message-bundle>org.sakaiproject.tool.help.bundle.Messages</message-bundle>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>de</supported-locale>
      <supported-locale>fr</supported-locale>
      <supported-locale>es</supported-locale>
    </locale-config>
  </application>
  

  <!--  Help -->
  <!-- =================== Tool Beans ============== -->


	<managed-bean>
		<description>HelpTool</description>
		<managed-bean-name>HelpTool</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.help.HelpTool</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>

	</managed-bean>
	
    <managed-bean>
		<description>TOCDisplayTool</description>
		<managed-bean-name>TOCDisplayTool</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.help.TOCDisplayTool</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>

	</managed-bean>

	<managed-bean>
		<description>TableOfContentsTool</description>
		<managed-bean-name>TableOfContentsTool</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.help.TableOfContentsTool</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
		
		<managed-property>
			<description>Bean Dependency: Help Manager</description>
			<property-name>helpManager</property-name>
			<value>#{Components["org.sakaiproject.service.help.HelpManager"]}</value>
		</managed-property>
		<managed-property>
			<description>logger</description>
			<property-name>logger</property-name>
			<value>#{Components["org.sakaiproject.service.framework.log.Logger"]}</value>
		</managed-property>
		<!-- 
		<managed-property>
			<description>Bean Dependency: Table of Contents</description>
			<property-name>tableOfContents</property-name>
			<value>#{Components["org.sakaiproject.service.help.TableOfContents"]}</value>
		</managed-property>
        -->
	</managed-bean>
	
	<managed-bean>
		<description>SearchTool</description>
		<managed-bean-name>SearchTool</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.help.SearchTool</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>

		<managed-property>
			<description>Bean Dependency: Help Manager</description>
			<property-name>helpManager</property-name>
			<value>#{Components["org.sakaiproject.service.help.HelpManager"]}</value>
		</managed-property>

	</managed-bean>
	
    <managed-bean>
		<description>QuestionTool</description>
		<managed-bean-name>QuestionTool</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.help.QuestionTool</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		
		<managed-property>
			<description>Bean Dependency: Help Manager</description>
			<property-name>helpManager</property-name>
			<value>#{Components["org.sakaiproject.service.help.HelpManager"]}</value>
		</managed-property>
		
		<managed-property>
			<description>Bean Dependency: Email Service</description>
			<property-name>emailService</property-name>
			<value>#{Components["org.sakaiproject.service.framework.email.EmailService"]}</value>
		</managed-property>
		
		<managed-property>
			<description>logger</description>
			<property-name>logger</property-name>
			<value>#{Components["org.sakaiproject.service.framework.log.Logger"]}</value>
		</managed-property>
	</managed-bean>
	<!-- 
  <component>
    <component-type>SakaiTocTree</component-type>
    <component-class>org.sakaiproject.jsf.help.TocTreeComponent</component-class>
  </component>
  -->
  <component>
    <component-type>SetDefaultAction</component-type>
    <component-class>org.sakaiproject.jsf.help.HelpSetDefaultActionComponent</component-class>
  </component>
  <render-kit>
      <renderer>
        <component-family>javax.faces.Data</component-family>
        <renderer-type>SakaiTocTree</renderer-type>
        <renderer-class>org.sakaiproject.jsf.help.TocTreeRender</renderer-class>
      </renderer>
      
      <renderer>
        <component-family>javax.faces.Data</component-family>
        <renderer-type>CSTree</renderer-type>
        <renderer-class>org.sakaiproject.jsf.help.ContextSensitiveTreeRender</renderer-class>
      </renderer>
      
      <renderer>
        <component-family>javax.faces.Data</component-family>
        <renderer-type>HelpFrameSet</renderer-type>
        <renderer-class>org.sakaiproject.jsf.help.HelpFrameSetRender</renderer-class>
      </renderer>
      
      <renderer>
        <component-family>javax.faces.Data</component-family>
        <renderer-type>QuestionLink</renderer-type>
        <renderer-class>org.sakaiproject.jsf.help.QuestionLinkRender</renderer-class>
      </renderer>
      
       
    </render-kit>
    
</faces-config>
