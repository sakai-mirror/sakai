<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   <bean id="emailArchiveOverview" class="org.sakaiproject.component.help.model.ResourceBean">
      <property name="docId"><value>chef-mailbox</value></property>
      <property name="name"><value>Email Archives Overview</value></property>
      <property name="location"><value>/sakai-help-tool/helpDocs/apmi.html</value></property>
   </bean>

   <bean id="customizeEmailArchive" class="org.sakaiproject.component.help.model.ResourceBean">
         <property name="docId"><value>customize_emailArchive</value></property>
      <property name="name"><value>Customize Email Archive</value></property>
      <property name="location"><value>/sakai-help-tool/helpDocs/appc.html</value></property>
   </bean>

      <bean id="readEmailArchive" class="org.sakaiproject.component.help.model.ResourceBean">
         <property name="docId"><value>read_emailArchive</value></property>
      <property name="name"><value>Read Message in Email Archive</value></property>
      <property name="location"><value>/sakai-help-tool/helpDocs/apmj.html</value></property>
   </bean>
   
    <bean id="org.sakaiproject.service.help.TableOfContents" 
          class="org.sakaiproject.component.help.model.TableOfContentsBean">
      <property name="name"><value>root</value></property>
      <property name="categories">
         <list>
            <bean id="emailArchiveCategory" class="org.sakaiproject.component.help.model.CategoryBean">
               <property name="name"><value>Email Archive</value></property>
               <property name="resources">
                  <list>
                     <ref bean="emailArchiveOverview"/>
                     <ref bean="customizeEmailArchive"/>
                     <ref bean="readEmailArchive"/>
                  </list>
               </property>
            </bean>
           </list>
         </property>
       </bean>
</beans>
