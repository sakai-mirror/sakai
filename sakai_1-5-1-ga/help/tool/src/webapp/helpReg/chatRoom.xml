<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
   <bean id="chatRoomOverview" class="org.sakaiproject.component.help.model.ResourceBean">
      <property name="docId"><value>chatRoom_overview</value></property>
      <property name="name"><value>Chat Room Overview</value></property>
      <property name="location"><value>/sakai-help-tool/helpDocs/apli.html</value></property>
   </bean>

   <bean id="useChatRoom" class="org.sakaiproject.component.help.model.ResourceBean">
         <property name="docId"><value>use_chatRoom</value></property>
      <property name="name"><value>Use Chat Room Features</value></property>
      <property name="location"><value>/sakai-help-tool/helpDocs/aplk.html</value></property>
   </bean>
   
    <bean id="org.sakaiproject.service.help.TableOfContents" 
          class="org.sakaiproject.component.help.model.TableOfContentsBean">
      <property name="name"><value>root</value></property>
      <property name="categories">
         <list>
            <bean id="chatRoomCategory" class="org.sakaiproject.component.help.model.CategoryBean">
               <property name="name"><value>Chat Room</value></property>
               <property name="resources">
                  <list>
                     <ref bean="chatRoomOverview"/>
                     <ref bean="useChatRoom"/>
                  </list>
               </property>
            </bean>
           </list>
         </property>
       </bean>
</beans>
