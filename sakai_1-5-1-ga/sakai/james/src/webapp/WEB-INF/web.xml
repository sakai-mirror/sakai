<?xml version="1.0"?>

<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>sakai-james</display-name>
    <description>Sakai James</description>

    <servlet>
        <servlet-name>
           james
        </servlet-name>
        <servlet-class>
            org.sakaiproject.james.JamesServlet
        </servlet-class>

		<!-- james / phoenix home -->
        <init-param>
            <param-name>phoenix.home</param-name>
            <param-value></param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
       <servlet-name>
          james
       </servlet-name>
       <url-pattern>
         /james/*
       </url-pattern>
    </servlet-mapping>

	<welcome-file-list>
	  <welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
