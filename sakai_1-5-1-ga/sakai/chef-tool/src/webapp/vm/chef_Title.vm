#set ($loggedin=$data.User.hasLoggedIn())
	<table border="0" cellpadding="0" cellspacing="0" width="100%" class="chefPortletStyleClass" summary="layout">
	<tr>
		<td class="chefTitleStyleClass">
## include the home link if desired
			#if($includeReset)
				<a href="#toolLink("$action" "doReset")" title="Reset"><img src="#imageLink("toolhome.gif")" alt="Reset" border="0"></a> $title
			#else
				$title
			#end
		</td>
		<td class="chefActionTitleStyleClass">
			#if($sakai_HelpURL)
			 	<a href="javascript:;" onClick="window.open('$sakai_HelpURL','Help','resizable=0,toolbar=no,scrollbars=yes, width=800,height=600')"><img src="#imageLink("help.gif")" alt="Help" border="0"></a>
	 		#end
			#if ($loggedin)
				#if ($myPortal.getFloating($data, $portlet.ID))
					<a href="#toolForm("FloatAction")" title="dock" ><img src="#imageLink("dock.gif")" alt="dock" border="0"></a>
				#else
					<a href="#toolForm("FloatAction")" title="float" ><img src="#imageLink("float.gif")" alt="float" border="0"></a>
				#end
			#end
		</td>
	</tr>
</table>
