##
## $allow_show_subject indicates whether user can choose to show subject rather than body of message
## $allow_channel_choice indicates whether user can choose channel
## $tool_title the title of the tool, such as "Recent Announcements", "Recent Chat", etc.
## $tool_name the name of the tool, such as "Announcements", "Chat", etc.
## $channel_analog the word(s) used to refer to a channel, such as "Chat Room"
## $one_item the word(s) used to refer to a single message
## $all_items the word(s) used to refer to all messages collectively
## $channels 
## $default_channel 
##
<div class="chefPortletContainer">
	<div class ="chefPortletToolBarMessage">
		Customizing $tool_title...
	</div>
	<div class="chefPortletContent">
		#if ($alertMessage)<div class="chefAlertBox">Alert: $validator.escapeHtml($alertMessage)</div><div style="display:block;clear:both" />#end
		<form action="#toolForm("$action")" method="post">
                #if($allow_show_subject == "true")
		<br />
		<input 	type="radio"
                        #if ($showSubject == "true") 
			checked="checked" 
                        #end
			name="$show_subject_form" 
			id="${show_subject_form}-subject" 
			value="true" /> 
		<label for="${show_subject_form}-subject">
			Show $one_item subject
		</label>
		<br />

		<input 	type="radio"
                        #if ($showSubject == "false") 
			checked="checked" 
                        #end
			name="$show_subject_form" 
			id="${show_subject_form}-body" 
			value="false" /> 
		<label for="${show_subject_form}-body">
			Show $one_item body
		</label>
		<br />
                #end

#if($allow_channel_choice == "true")
#if($channels.size() > 0) 
		<br />
		<div class="chefInlineInstructions">
			Select the $channel_analog from which recent $all_items will be displayed.
		</div>
		<br />
		
		<input 
			type="radio" 
			value="$default_channel" 
#if ($default_channel == $channel)
			checked="checked" 
#end
			name="$channel_form"
			id="${channel_form}-default" />
		<label for="${channel_form}-default">
			Main Chat Room
		</label>
		<br />

#set($buttonNum = 0)
#foreach ($chnl in $channels)
		<input 
			type="radio" 
			value="$chnl" 
#if ($chnl == $channel)
			checked="checked" 
#end
			name="$channel_form"
			id="${channel_form}-$buttonNum" />
		<label for="${channel_form}-$buttonNum">
			$chnl
		</label>
		<br />

#set($buttonNum = $buttonNum + 1)
#end
#end
#end
		<br/>
		<fieldset>
			<legend>
				$tool_title Display
			</legend>
			<div class="chefInlineInstructions">
				How will $all_items display in the $tool_title list?
			</div>
			<br />

			<table class="chefEditItem">
				<tr>
					<td class="label">
						<label for="$days_form">
							Number of days in the past: 
						</label>
					</td>
					<td>
						<input type="text" name="$days_form" value="$days" />
					</td>
				</tr>
				<tr>
					<td class="label">
						<label for="$items_form">
							Number of $all_items: 
						</label>
					</td>
					<td>
						<input type="text" name="$items_form" value="$items" />
					</td>
				</tr>
				<tr>
					<td class="label">
						<label for="$items_form">
							Number of characters per $one_item: 
						</label>
					</td>
					<td>
						<input type="text" name="$length_form" value="$length" />
					</td>
				</tr>
			</table>
		</fieldset>
		<p>&nbsp;</p>
		<div class="chefButtonRow">
			<input type="submit" name="$form-submit" id="$form-submit" value="Save" />
			<input type="submit" name="$form-cancel" id="$form-cancel" value="Cancel" />
		</div>
		</form>
	</div>
</div>

