<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<name>Sakai Velocity Module</name>
	<groupId>sakaiproject</groupId>
	<id>sakai-velocity</id>
	<currentVersion>sakai.1.5.1</currentVersion>
	<organization>
		<name>University of Michigan</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2003</inceptionYear>

	<dependencies>

		<!-- servlet -->
		<dependency>
			<groupId>servletapi</groupId>
			<artifactId>servletapi</artifactId>
			<version>2.3</version>
		</dependency>

		<!-- velocity : include in the .war -->
		<dependency>
			<groupId>velocity</groupId>
			<artifactId>velocity</artifactId>
			<version>1.3.1</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>logkit</groupId>
			<artifactId>logkit</artifactId>
			<version>1.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>oro</groupId>
			<artifactId>oro</artifactId>
			<version>2.0.8</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<!-- to be able to access the Sakai component manager -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-component</artifactId>
			<version>sakai.1.5.1</version>
		</dependency>

		<!-- to be able to use the Sakai Service APIs -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-service</artifactId>
			<version>sakai.1.5.1</version>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util</artifactId>
			<version>sakai.1.5.1</version>
		</dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

		<!-- other resources for the jar - the message bundles -->
		<resources>
			<resource>
				<directory>${basedir}/src/bundle</directory>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	
	</build>

</project>
