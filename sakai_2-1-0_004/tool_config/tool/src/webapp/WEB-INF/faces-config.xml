	<managed-bean>
		<description>
			The Tool controller bean for the Tool Configuration Helper Tool
		</description>
		<managed-bean-name>OptionsTool</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.tool_config.ConfigTool</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<description>API Dependency: session manager</description>
			<property-name>sessionManager</property-name>
			<value>#{Components["org.sakaiproject.api.kernel.session.SessionManager"]}</value>
		</managed-property>
		<managed-property>
			<description>API Dependency: tool manager</description>
			<property-name>toolManager</property-name>
			<value>#{org_sakaiproject_api_kernel_tool_ToolManager}</value>
		</managed-property>
	</managed-bean>

</faces-config>
